<main class="ingredientPage">
    <div id="ingredient-search-container">
    <form action="ingredient/search" class="input-group mb-3 search-bar">
        <input type="text" class="form-control" name="q" placeholder="Ingredient Name">
        <button type="submit" class="btn btn-primary input-group-append">Search</button>
    </form>

    <button type="button" id="add-ing-button">Add Ingredient</button>

    <h1 id="ing-search-result"> Results for {{name}}</h1>
    <div class="ingredient-card-container">
        
        {{#each Producers}}
            {{> ingredientCard}}
        {{/each}}

    </div>
    </div>

    <button type="button" id="add-producer-button"></button>
    {{>addIngPop}}
  
</main>
